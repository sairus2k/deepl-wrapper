{
	"name": "deepl-wrapper",
	"version": "0.0.0",
	"description": "A simple web wrapper for DeepL API that enables translation of file formats not supported in DeepL's free web version",
	"keywords": [
		"deepl",
		"translation",
		"api",
		"file-translator"
	],
	"license": "MIT",
	"author": "",
	"scripts": {
		"build": "tsc -b && vite build && cp -r ./functions dist/",
		"dev": "pnpm run --parallel /dev:.*/",
		"dev:wrangler": "wrangler pages dev",
		"dev:vite": "vite",
		"deploy": "pnpm build && wrangler pages deploy dist",
		"lint": "biome lint --fix"
	},
	"pnpm": {
		"overrides": {
			"vite": "npm:rolldown-vite@7.2.2"
		},
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp",
			"workerd"
		]
	},
	"dependencies": {
		"react": "^19.2.0",
		"react-dom": "^19.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@cloudflare/workers-types": "^4.20251118.0",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.6",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"babel-plugin-react-compiler": "^1.0.0",
		"daisyui": "^5.5.5",
		"tailwindcss": "^4.1.17",
		"typescript": "~5.9.3",
		"vite": "npm:rolldown-vite@7.2.5",
		"wrangler": "^4.47.0"
	}
}
